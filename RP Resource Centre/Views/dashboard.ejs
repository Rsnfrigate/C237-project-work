<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

</head>
<body class="container py-4">
  <h2 class="mb-4">Welcome, <%= user.name %> (<%= user.role %>)</h2>

  <div class="d-flex justify-content-between mb-3">
    <% if (user.role === 'student') { %>
      <a href="/loan" class="btn btn-success">Request a Laptop</a>
    <% } %>
    <form action="/search" method="GET" class="d-flex">
      <select name="status" class="form-select me-2">
        <option value="pending">Pending</option>
        <option value="approved">Approved</option>
        <option value="returned">Returned</option>
      </select>
      <button class="btn btn-primary">Filter</button>
    </form>
    <a href="/logout" class="btn btn-danger">Logout</a>
  </div>

  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th>ID</th>
        <th>Laptop</th>
        <th>Loan Date</th>
        <th>Return Date</th>
        <th>Status</th>
        <% if (user.role === 'admin') { %><th>Action</th><% } %>
      </tr>
    </thead>
    <tbody>
      <% loans.forEach(loan => { %>
        <tr>
          <td><%= loan.id %></td>
          <td><%= loan.model %></td>
          <td><%= loan.loan_date.toISOString().split('T')[0] %></td>
          <td><%= loan.return_date.toISOString().split('T')[0] %></td>
          <td><%= loan.status %></td>
          <% if (user.role === 'admin') { %>
            <td><a href="/delete/<%= loan.id %>" class="btn btn-sm btn-outline-danger">Delete</a></td>
          <% } %>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>